<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/seriesBackground"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:contentDescription="@string/digimonInfoImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/seriesIcon"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:layout_marginStart="10dp"
        android:elevation="5dp"
        android:contentDescription="@string/digimonInfoImage"
        app:layout_constraintBottom_toBottomOf="@id/seriesBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/seriesLogo"
        android:layout_width="236dp"
        android:layout_height="97dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/digimonInfoImage"
        app:layout_constraintBottom_toBottomOf="@id/seriesBackground"
        app:layout_constraintEnd_toEndOf="@id/seriesBackground"
        app:layout_constraintStart_toEndOf="@id/seriesIcon"
        app:layout_constraintTop_toTopOf="@id/seriesBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>
